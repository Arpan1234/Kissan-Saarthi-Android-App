<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.kissansaarthi.kissansaarthi.MainPage"
    tools:showIn="@layout/app_bar_home"
    android:layout_weight="100"
    android:id = "@+id/container"
    android:background="@drawable/yellow_and_green">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/mandi"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView2"
        android:text="Mandi"
        android:textSize="15dp"
        android:gravity="center"
        android:id="@+id/textView1"

        />
    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView3"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/kissan"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView3"
        android:layout_alignRight="@+id/textView1"
        android:text="Farmer Zone"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        android:gravity="center"

        />

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView4"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/dealer"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView4"
        android:text="Dealer Zone"
        android:textSize="15dp"
        android:gravity="center"

        />


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView5"

        android:layout_below="@+id/imageView3"
        android:layout_marginTop="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/weather"/>


    <TextView
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView5"
        android:text="Weather"
        android:layout_alignParentRight="true"
        android:textSize="15dp"
        android:gravity="center"

        />


    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:id="@+id/imageView6"
        android:layout_below="@+id/imageView4"
        android:layout_centerHorizontal="true"
        android:src="@drawable/events"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageView6"
        android:text="News"
        android:textSize="15dp"
        android:gravity="center"

        />


</RelativeLayout>
